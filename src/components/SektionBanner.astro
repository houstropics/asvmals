---
const { Banner, BannerMobile, Icon, Sektion } = Astro.props;
---

<div style="position: relative; max-height: 100vh;">
		<img
			src={Banner}
			alt={Sektion}
      class="hidden lg:block"
			style="width: 100%; height: calc(100vh - 2rem); object-fit: cover; object-position: 50% 50%;"
		/>
    <img
    src={BannerMobile}
    alt={Sektion}
    class="lg:hidden"
    style="width: 100%; height: calc(100vh - 2rem); object-fit: cover; object-position: 50% 50%;"
    />


      <div style="position: absolute; bottom: 0; left: 0;">
          <table class="mb-4" >
            <tr>
              <td style="padding-left: 28px;">
                <img
                  src={Icon}
                  alt={Sektion}
                  style="width:100px;"
                  class="hidden lg:inline-block mr-14"
                />
				<img
                  src={Icon}
                  alt={Sektion}
                  style="width:70px;"
                  class="lg:hidden inline-block mr-3"
                />
              </td>

			  <td> 
                <div class="text-5xl lg:text-8xl font-univermag text-white">{Sektion}</div>
              </td>
            </tr>
          </table>
        </div>
    </div>