---
const { number1, number2, imageSrc, imageAlt, textContent, width } = Astro.props;
---

<div class="flex flex-row lg:hidden">
    <div class="w-24 bg-primary relative ">
        <div class="font-univermag pt-4 text-5xl text-right absolute top-0 left-0 z-50 w-full">
            <div class="text-secondary pr-2" style="margin-bottom: -0.4em;">{number1}</div>
            <div class="text-white z-20">{number2}</div>
        </div>
    </div>

    <div class="w-full flex flex-col relative">
        <div class="max-h-60 mt-10 -ml-4 relative">
            <img src={imageSrc} alt={imageAlt} class=" h-full object-cover" />
        </div>

        <div class="p-4 text-primary">
            <div>
                {textContent}
            </div>
        </div>
    </div>
</div>

<div class="flex-row hidden lg:flex">
    <div style="width: 45%;"  class="py-8 pl-20 order-2 lg:order-none">
        <div class="pl-20 pb-4 w-full h-full overflow-hidden">

            <img src={imageSrc} alt={imageAlt} class={width} class=" h-full object-cover" />
        </div>
    </div>

    <div style="width: 10%;" class="bg-primary order-1 lg:order-none">
        <div class="font-univermag pt-4  text-7xl text-right">
            <div class="text-secondary" style="margin-bottom: -0.4em;">{number1}</div>
            <div class="text-white">{number2}</div>
        </div>
    </div>
    
    <div style="width: 45%;" class="py-8 pl-20 pr-8 text-primary order-3 lg:order-none">
        <div>{textContent}</div>
    </div>
</div>
